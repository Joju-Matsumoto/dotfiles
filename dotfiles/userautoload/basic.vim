filetype off
filetype plugin indent off
syntax off

set encoding=utf-8
set number
set nowrap
set showcmd
set showmatch
set list
set listchars=eol:¬,tab:▸

set hlsearch
set nowrapscan
set noincsearch
set smartcase

set backspace=indent,eol,start
set expandtab
set tabstop=2
set softtabstop=2
set shiftwidth=2
set autoindent
set smartindent

set nobackup
set history=100
set wildmenu
set wildmode=longest:full,full
set ttyfast

filetype plugin indent on
syntax on

